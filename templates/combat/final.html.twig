{% extends 'base.html.twig' %}

{% block title %}Combats du Tournoi {% endblock %}

{% block body %}

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Combattant 1</th>
                <th>Combattant 2</th>
                <th>Score Combattant 1</th>
                <th>Score Combattant 2</th>
                <th>Cat√©gorie</th>
            </tr>
        </thead>
        <tbody>
        {% for combat in combats %}

            {% if combat.phase == 'Finale' %}            {% endif %}

                <p>Combat Finale : {{ combat.combattant1.nom }} vs {{ combat.combattant2.nom }}</p>
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ combat.combattant1.nom }} {{ combat.combattant1.prenom }}</td>
                    <td>{{ combat.combattant2.nom }} {{ combat.combattant2.prenom }}</td>
                    <td>{{ combat.scoreCombattant1 }}</td>
                    <td>{{ combat.scoreCombattant2 }}</td>
                    <td>{{ combat.categorie }} kg</td> 
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun combat disponible pour ce tournoi.</td>
                </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
