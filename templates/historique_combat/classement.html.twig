{% extends 'base.html.twig' %}

{% block title %}Classement des Catégories{% endblock %}

{% block body %}
    <h2 class="titreH2">Classement des Catégories</h2>

    <div class="categorie-liste">
        <h3>Liste des Catégories</h3>
        <ul>
            {# Boucle sur les catégories passées depuis le contrôleur #}
            {% for cat in categorie %}
                <li>
                    <a href="{{ path('classement_categorie', { 'id': cat.id }) }}">
                        {{ cat.getCategoriePoids }} kg
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
